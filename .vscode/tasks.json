{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "build",
            "type": "shell",
            "command": "cargo build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "taskName": "scratch",
            "type": "shell",
            "command": "cargo run -- --print-ast --print-mir language/scratch.cf",
            "problemMatcher": [
                "$rustc"
            ]
        },
        {
            "taskName": "test",
            "type": "shell",
            "command": "python test.py"
        }
    ]
}